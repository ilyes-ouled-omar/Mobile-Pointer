                <SolidColorBrush Color="{DynamicResource bleufoncé}"/>
            </Button.Foreground>
            <Button.BorderBrush>
                <SolidColorBrush Color="{DynamicResource bleufoncé}"/>
            </Button.BorderBrush>
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource jaunemoutarde}"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="ID_à_supprimer" HorizontalAlignment="Left" Height="60" Margin="403,195,0,414" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="231" FontSize="24" RenderTransformOrigin="0.506,-1.583" >
