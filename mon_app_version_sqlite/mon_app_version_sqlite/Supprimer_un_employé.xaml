    <Window.Background>
        <SolidColorBrush Color="{DynamicResource Fond}"/>
    </Window.Background>
    <Grid>
        <Button x:Name="Supprimer" Content="Supprimer" HorizontalAlignment="Left" Margin="654,325,0,0" VerticalAlignment="Top" Width="157" Click="Supprimer_Click" Height="50" FontSize="24">
