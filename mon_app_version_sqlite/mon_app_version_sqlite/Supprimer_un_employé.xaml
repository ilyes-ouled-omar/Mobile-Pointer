        </Button>
        <Grid HorizontalAlignment="Left" Height="14" Margin="-5,93,0,0" VerticalAlignment="Top" Width="997" Background="#FF08183C"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="326,205,0,0" VerticalAlignment="Top" Height="50" Width="55" FontFamily="Times New Roman" FontSize="24" FontWeight="Bold">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource bleufoncé}"/>
            </Label.Foreground>
        </Label>
        <Label Content="Veuillez entrer l'ID de l'employé à supprimer" HorizontalAlignment="Left" Margin="0,28,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.053,0.115" Height="65" Width="511" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <Label.BorderBrush>
                <SolidColorBrush Color="{DynamicResource bleufoncé}"/>
            </Label.BorderBrush>
            <Label.Background>
                <SolidColorBrush Color="{DynamicResource bleufoncé}"/>
            </Label.Background>
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource blanc}"/>
            </Label.Foreground>
        </Label>
        <Grid HorizontalAlignment="Left" Height="14" Margin="10,655,-15,0" VerticalAlignment="Top" Width="997" Background="#FF08183C">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="208*"/>
                <ColumnDefinition Width="660*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="121*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Image HorizontalAlignment="Left" Height="100" Margin="688,421,0,0" VerticalAlignment="Top" Width="100" Source="C:\Users\DELL\Desktop\Mobile-Pointer\image4.png" />
